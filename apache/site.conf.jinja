<VirtualHost *:80>
    ServerName {{ args.fqdn }}
    {%- if 'aliases' in args %}
    ServerAlias {{ args.aliases|join(" ") }}
    {%- endif %}

    {%- if args.get('ssl', False) and args.get('force_ssl', False) %}
    RewriteEngine on
    RewriteCond %{HTTPS} !=on
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    {%- endif %}

    DocumentRoot /var/www/{{ args.fqdn }}
    Options -Indexes

    ErrorLog /var/log/apache2/{{ args.fqdn }}/error.log
    CustomLog /var/log/apache2/{{ args.fqdn }}/access.log common

    {%- for k, v in args.get('custom_options', {}).items() %}
    {{ k }} {{ v }}
    {%- endfor %}

    <Directory /var/www/{{ args.fqdn }}>
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>
</VirtualHost>

{% if args.get('ssl', False) %}
<VirtualHost *:443>
    ServerName {{ args.fqdn }}
    {%- if 'aliases' in args %}
    ServerAlias {{ args.aliases|join(" ") }}
    {%- endif %}

    SSLEngine on
    SSLProtocol -ALL -SSLv3 +TLSv1 +TLSv1.1 +TLSv1.2
    SSLHonorCipherOrder On
    SSLCipherSuite EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5
    SSLCertificateFile /etc/ssl/certs/wildcard_public_cert.crt
    SSLCertificateKeyFile /etc/ssl/private/wildcard_private.key
    SSLCACertificateFile /etc/ssl/certs/wildcard_ca.pem
    Header add Strict-Transport-Security "max-age=15768000{% if args.get('sts_include_subdomains', False) %}; includeSubdomains{% endif %}"

    {%- if 'document_root' in args %}
    DocumentRoot {{ args.document_root }}
    {%- else %}
    DocumentRoot /var/www/{{ args.fqdn }}
    {%- endif %}
    Options -Indexes

    ErrorLog /var/log/apache2/{{ args.fqdn }}/error.log
    CustomLog /var/log/apache2/{{ args.fqdn }}/access.log common

    {%- for k, v in args.get('custom_options', {}).items() %}
    {{ k }} {{ v }}
    {%- endfor %}

    <Directory /var/www/{{ args.fqdn }}>
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>
</VirtualHost>
{% endif %}
