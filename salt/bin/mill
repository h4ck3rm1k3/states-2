#!/bin/sh
#/ Usage: mill <cmd> <options>
: ${SALT_STATES_DIR:="/etc/salt/states"}

case "$1" in
    pull|update|up)
        shift
        git --work-tree=$SALT_STATES_DIR --git-dir=$SALT_STATES_DIR/.git pull $*
        ;;
    apply|call)
        shift
        salt-call state.highstate -l quiet $*
        ;;
    revert)
        shift
        git --work-tree=$SALT_STATES_DIR --git-dir=$SALT_STATES_DIR/.git revert $*
        ;;
    test|status|st)
        shift
        salt-call state.highstate -l quiet test=True $*
        ;;
    "")
        grep "^#/" $0 | cut -c4- >&2
        exit 2
        ;;
    *)
        echo "Unknown command: '$1'" >&2
        exit 1
        ;;
esac
